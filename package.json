{
    "name": "rpm-spec",
    "displayName": "RPM spec",
    "description": "RPM spec support for Visual Studio Code",
    "icon": "images/rpm.png",
    "version": "0.3.3",
    "license": "MIT",
    "publisher": "ian-h-chamberlain",
    "engines": {
        "vscode": "^1.55.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ian-h-chamberlain/vscode-rpm-spec.git"
    },
    "bugs": {
        "url": "https://github.com/ian-h-chamberlain/vscode-rpm-spec/issues"
    },
    "categories": [
        "Programming Languages",
        "Linters"
    ],
    "activationEvents": [
        "onLanguage:rpm-spec"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "languages": [
            {
                "id": "rpm-spec",
                "aliases": [
                    "RPM spec",
                    "RPMSpec"
                ],
                "extensions": [
                    ".spec",
                    ".spec.template"
                ],
                "configuration": "./rpm-spec.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "rpm-spec",
                "scopeName": "source.spec",
                "path": "./syntaxes/spec.json"
            }
        ],
        "configuration": {
            "title": "RPM spec configuration",
            "properties": {
                "rpmspec.lint": {
                    "type": "boolean",
                    "default": true,
                    "description": "Lint RPM spec files with rpmlint",
                    "scope": "machine"
                },
                "rpmspec.rpmlintPath": {
                    "type": "string",
                    "default": "rpmlint",
                    "description": "Path to 'rpmlint' command",
                    "scope": "machine"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^12.20.9",
        "@types/vscode": "^1.55.0",
        "ovsx": "^0.1.0",
        "typescript": "^4.2.4",
        "vsce": "^1.87.1"
    },
    "dependencies": {}
}
